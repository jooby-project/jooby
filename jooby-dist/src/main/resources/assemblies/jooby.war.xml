<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>jooby.war</id>

  <formats>
    <format>war</format>
  </formats>

  <baseDirectory>/</baseDirectory>
  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>WEB-INF${file.separator}lib</outputDirectory>
      <scope>runtime</scope>
      <excludes>
        <!-- netty -->
        <exclude>io.netty:*</exclude>
        <exclude>org.jooby:jooby-netty</exclude>
        <!-- undertow -->
        <exclude>io.undertow:*</exclude>
        <exclude>org.jboss.xnio:*</exclude>
        <exclude>org.jooby:jooby-undertow</exclude>
        <!-- jetty -->
        <exclude>org.eclipse.jetty:*</exclude>
        <exclude>org.eclipse.jetty.websocket:*</exclude>
        <exclude>org.jooby:jooby-jetty</exclude>
      </excludes>
    </dependencySet>

    <!-- Default web.xml -->
    <dependencySet>
      <outputDirectory></outputDirectory>
      <scope>provided</scope>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <unpack>true</unpack>
      <unpackOptions>
        <filtered>true</filtered>
        <includes>
          <include>WEB-INF/**/*.*</include>
        </includes>
      </unpackOptions>
      <includes>
        <include>org.jooby:jooby-servlet</include>
      </includes>
    </dependencySet>

    <!-- WEB-INF/lib/*.jar -->
    <dependencySet>
      <outputDirectory>WEB-INF${file.separator}lib</outputDirectory>
      <scope>provided</scope>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.jooby:jooby-servlet</include>
      </includes>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <!-- src/etc/war/ : / -->
    <fileSet>
      <directory>
        ${project.basedir}${file.separator}src${file.separator}etc${file.separator}war
      </directory>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- src/etc/war/ : / -->
    <fileSet>
      <directory>
        ${project.basedir}${file.separator}src${file.separator}etc${file.separator}war
      </directory>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- target/classes : WEB-INF/classes -->
    <fileSet>
      <directory>
        ${project.build.outputDirectory}
      </directory>
      <outputDirectory>WEB-INF${file.separator}classes</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- conf : WEB-INF/classes -->
    <fileSet>
      <directory>
        ${project.basedir}${file.separator}conf
      </directory>
      <filtered>true</filtered>
      <outputDirectory>WEB-INF${file.separator}classes</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- src/main/resources : WEB-INF/classes -->
    <fileSet>
      <directory>
        ${project.basedir}${file.separator}src${file.separator}main${file.separator}resources
      </directory>
      <filtered>true</filtered>
      <outputDirectory>WEB-INF${file.separator}classes</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- public : WEB-INF/public -->
    <fileSet>
      <directory>
        ${project.basedir}${file.separator}public
      </directory>
      <filtered>true</filtered>
      <outputDirectory>WEB-INF${file.separator}classes</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    
    <!-- compiled assets -->
    <fileSet>
      <directory>
        ${project.build.directory}${file.separator}__public_
      </directory>
      <filtered>true</filtered>
      <outputDirectory>WEB-INF${file.separator}classes</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- cmd : WEB-INF/cmd -->
    <fileSet>
      <directory>
        ${project.build.outputDirectory}
      </directory>
      <outputDirectory>WEB-INF${file.separator}cmd</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

  </fileSets>

</assembly>
